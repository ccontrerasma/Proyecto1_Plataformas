<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:aandroid="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/misti_background">

    <!-- Título de la aplicación -->

    <!-- Mensaje de bienvenida -->

    <!-- Botón "Buscar" (rojo) -->

    <!-- Botón "Cerca de mí" (gris) -->

    <TextView
        android:id="@+id/appTitle"
        android:layout_width="126dp"
        android:layout_height="40dp"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintTop_toTopOf="parent"
        android:text="SumAq P."
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="157dp"
        tools:layout_editor_absoluteY="55dp" />

    <TextView
        android:id="@+id/welcomeMessage"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintTop_toBottomOf="@id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Bienvenido!"
        android:textColor="#000000"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="157dp"
        tools:layout_editor_absoluteY="156dp" />

    <Button
        android:id="@+id/btnBuscar"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintTop_toBottomOf="@id/welcomeMessage"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button_red"
        android:text="Buscar"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="302dp" />

    <Button
        android:id="@+id/btnCercaDeMi"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintTop_toBottomOf="@id/btnBuscar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button_gray"
        android:text="Cerca de mí"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="376dp" />

</androidx.constraintlayout.widget.ConstraintLayout>



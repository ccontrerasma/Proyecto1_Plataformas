<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#55c4ff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Franja para la Catedral -->

            <LinearLayout
                android:id="@+id/layoutCatedral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:layout_marginBottom="16dp"
                android:layout_margin="8dp"
                android:elevation="4dp"
                android:background="@drawable/rounded_linear_layout"
                android:clipToOutline="true"
                android:foreground="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/catedral"
                    android:layout_marginEnd="16dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/rounded_image_view"
                    android:clipToOutline="true"
                    android:layout_gravity="center"
                    android:elevation="2dp"
                    android:padding="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Catedral de Arequipa"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Franja para el Claustro -->
            <LinearLayout
                android:id="@+id/layoutClaustro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:layout_marginBottom="16dp"
                android:layout_margin="8dp"
                android:elevation="4dp"
                android:background="@drawable/rounded_linear_layout"
                android:clipToOutline="true"
                android:foreground="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/claustro"
                    android:layout_marginEnd="16dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/rounded_image_view"
                    android:clipToOutline="true"
                    android:layout_gravity="center"
                    android:elevation="2dp"
                    android:padding="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Claustro de la Compañía"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Contenedor para los fragmentos -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#55c4ff"/>
</LinearLayout>
